@model BloodDonorship.Web.ViewModels.Administration.Users.DeletedUsersViewModel
@{
    this.ViewData["Title"] = "Deleted users";
    int count = 1;
}

<div class="row">
    <div class="col-lg-6"><h3>@this.ViewData["Title"]</h3></div>
    <div class="col-lg-6">
        <a asp-area="Administration" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-primary float-right">Dashboard</a>
    </div>
    <div class="clearfix"></div>
</div>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Registered On</th>
            <th scope="col">Username</th>
            <th scope="col">Deleted On</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.DeletedUsers)
        {
        <tr>
            <td>@count</td>
            <td><time datetime="@user.CreatedOn.ToString("O")"></time></td>
            <td>@user.UserName</td>
            <td><time datetime="@user.DeletedOn.ToString("O")"></time></td>
            <td><a asp-area="Administration" asp-controller="Users" asp-action="UndeleteUser" asp-route-userId="@user.Id" class="btn btn-success">Restore</a></td>
        </tr>
            count++;
        }


    </tbody>
</table>

